<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageViewGrades"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:padding="5dp"
            android:src="@drawable/grades" />

        <TextView
            android:id="@+id/gradesTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingTop="15dp"
            android:paddingLeft="5dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageViewGrades"
            android:text="Title"
            android:textStyle="italic"
            android:textSize="15dp"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/obtainedMarks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gradesTitle"
            android:layout_toRightOf="@+id/imageViewGrades"
            android:maxLines="4"
            android:text="Obt Marks"
            android:textSize="20dp"
            android:paddingLeft="5dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TextViewSlash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_alignBaseline="@+id/obtainedMarks"
            android:layout_alignBottom="@+id/obtainedMarks"
            android:layout_toRightOf="@+id/obtainedMarks"
            android:maxLines="4"
            android:textSize="20dp"
            android:text="/" />

        <TextView
            android:id="@+id/maximumMarks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/TextViewSlash"
            android:layout_alignBottom="@+id/TextViewSlash"
            android:layout_toRightOf="@+id/TextViewSlash"
            android:maxLines="4"
			android:textSize="20dp"            
            android:text="Max Marks" />

    </RelativeLayout>

