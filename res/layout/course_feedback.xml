<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" >

        <TextView
            android:id="@+id/courseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:gravity="center"
            android:text="Course Name"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="Spring - 2014"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/Teaching"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="Teaching"
                android:textSize="20dp" >
            </TextView>
        </TableRow>

        <TableRow>

            <RatingBar
                android:id="@+id/ratingTeaching"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/CourseWork"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="Course Content"
                android:textSize="20dp" >
            </TextView>
        </TableRow>

        <TableRow>

            <RatingBar
                android:id="@+id/ratingCourseWork"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/Grading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="Course Work Load"
                android:textSize="20dp" >
            </TextView>
        </TableRow>

        <TableRow>

            <RatingBar
                android:id="@+id/ratingGrading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/GTA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="GTA Support"
                android:textSize="20dp" >
            </TextView>
        </TableRow>

        <TableRow>

            <RatingBar
                android:id="@+id/ratingGTA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical" >
        </TableRow>

        <TableRow>
        </TableRow>

        <TableRow>
        </TableRow>

        <TableRow>

            <EditText
                android:id="@+id/etEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:hint="Comments (optional)"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:lines="5"
                android:singleLine="false" 
                android:visibility="gone" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/SubmitFeedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:background="@drawable/roundedbutton"
                android:visibility="gone" 
                android:text="Submit Feedback" />
        </TableRow>
    </TableLayout>

</ScrollView>